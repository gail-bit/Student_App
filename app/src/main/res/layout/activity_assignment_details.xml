<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dirty_white">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/assignmentHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/dark_green"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="20dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back"
            app:tint="@color/dirty_white"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="Assignment Details"
            android:textColor="@color/dirty_white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"/>
    </LinearLayout>

    <!-- Assignment Details Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/assignmentHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Assignment Title -->
                <TextView
                    android:id="@+id/assignmentTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Assignment Title"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_green"
                    android:layout_marginBottom="16dp"/>

                <!-- Assignment Description -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/assignmentDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Assignment description goes here..."
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:lineSpacingMultiplier="1.4"
                    android:layout_marginBottom="24dp"/>

                <!-- Due Date -->
                <TextView
                    android:id="@+id/assignmentDueDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Due: December 15, 2024 at 11:59 PM"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/error"
                    android:layout_marginBottom="24dp"
                    android:drawableStart="@drawable/ic_schedule"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/error"/>

                <!-- Subject Info -->
                <TextView
                    android:id="@+id/assignmentSubject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Subject: Advanced Mathematics"
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:layout_marginBottom="12dp"
                    android:drawableStart="@drawable/ic_library_books"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/dark_green"/>

                <!-- Instructor Info -->
                <TextView
                    android:id="@+id/assignmentInstructor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Instructor: Dr. Smith"
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:layout_marginBottom="24dp"
                    android:drawableStart="@drawable/ic_profile"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/dark_green"/>

                <!-- Submission Status -->
                <TextView
                    android:id="@+id/submissionStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_green"
                    android:layout_marginBottom="16dp"
                    android:drawableStart="@drawable/ic_schedule"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/dark_green"
                    android:visibility="gone"/>

                <!-- Submitted Files Section -->
                <TextView
                    android:id="@+id/submittedFilesLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Submitted Files"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/submittedFilesRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="true"
                    tools:listitem="@layout/item_submitted_file"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:visibility="gone"/>

                <!-- File Upload Section -->
                <TextView
                    android:id="@+id/uploadSectionLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Submit Assignment"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/attachFileButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Attach Files (Images/Documents)"
                    android:textColor="@color/dirty_white"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    app:backgroundTint="@color/dark_green"
                    app:cornerRadius="10dp"
                    android:visibility="gone"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/attachedFilesRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_file"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:visibility="gone"/>

                <!-- Submit Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/submitAssignmentButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Submit Assignment"
                    android:textColor="@color/dirty_white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="16dp"
                    app:backgroundTint="@color/dark_green"
                    app:cornerRadius="10dp"
                    android:visibility="gone"/>

                <!-- Grade Section -->
                <LinearLayout
                    android:id="@+id/gradeSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/cell_border"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="16dp"
                    android:padding="20dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Grade"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/dark_green"
                        android:layout_marginBottom="12dp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/assignmentGrade"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Not graded yet"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:gravity="center"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/gradeComments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="16sp"
                        android:textColor="#424242"
                        android:gravity="center"
                        android:visibility="gone"/>

                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>