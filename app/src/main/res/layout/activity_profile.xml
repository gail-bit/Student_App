<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="student"
            type="com.activity.studentapp.model.Student" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dirty_white">

        <!-- AppBar -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_green"
            android:elevation="4dp">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/dark_green"
                app:navigationIcon="@drawable/ic_arrow_back_white"
                app:titleTextColor="@color/white"
                app:title="Student Details"/>
        </com.google.android.material.appbar.AppBarLayout>

        <!-- Content -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Student Header Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:strokeColor="@color/dark_green"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:gravity="center">

                        <!-- Avatar -->
                        <ImageView
                            android:id="@+id/studentAvatar"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginBottom="12dp"
                            android:src="@drawable/ic_person"
                            android:background="@drawable/circle_bg_admin_light"
                            android:padding="15dp"
                            android:contentDescription="Student avatar"
                            android:scaleType="centerInside"
                            app:tint="@color/dark_green" />

                        <!-- Student Name -->
                        <TextView
                            android:id="@+id/studentName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Student Name"
                            android:textColor="@color/dark_green"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <!-- Student Info -->
                        <TextView
                            android:id="@+id/studentInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Grade 12 - STEM | 2023-2024"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp" />

                        <!-- Status Chip -->
                        <com.google.android.material.chip.Chip
                            android:id="@+id/studentStatus"
                            style="@style/Widget.Material3.Chip.Assist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Active"
                            android:textColor="@color/dark_green"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            app:chipBackgroundColor="@color/dirty_white"
                            app:chipStrokeColor="@color/dark_green"
                            app:chipStrokeWidth="1dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Student Details Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:strokeColor="@color/gray_300"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Header with title and edit button -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Student Information"
                                android:textColor="@color/dark_green"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- Student ID -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Student ID:"
                                android:textColor="@color/gray_600"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/studentId"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="ST12345"
                                android:textColor="#FF000000"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>


                        <!-- First Name -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="First Name:"
                                android:textColor="@color/gray_600"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/studentFirstName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="John"
                                android:textColor="#FF000000"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <!-- Middle Name -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Middle Name:"
                                android:textColor="@color/gray_600"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/studentMiddleName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="Michael"
                                android:textColor="#FF000000"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <!-- Last Name -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Last Name:"
                                android:textColor="@color/gray_600"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/studentLastName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="Doe"
                                android:textColor="#FF000000"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <!-- Email -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Email:"
                                android:textColor="@color/gray_600"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/studentEmail"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="student@email.com"
                                android:textColor="@color/black"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <!-- Phone -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Phone:"
                                android:textColor="@color/gray_600"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/studentPhone"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="+63 912 345 6789"
                                android:textColor="@color/black"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <!-- House Number -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="House Number:"
                                android:textColor="@color/gray_600"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/studentHouseNumber"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="123"
                                android:textColor="#FF000000"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <!-- Street -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Street:"
                                android:textColor="@color/gray_600"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/studentStreet"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="Main Street"
                                android:textColor="#FF000000"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <!-- Barangay -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Barangay:"
                                android:textColor="@color/gray_600"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/studentBarangay"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="Barangay Name"
                                android:textColor="#FF000000"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <!-- Municipality -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Municipality:"
                                android:textColor="@color/gray_600"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/studentMunicipality"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="City Name"
                                android:textColor="#FF000000"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <!-- Full Address -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Full Address:"
                                android:textColor="@color/gray_600"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/studentAddress"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="123 Main St, Barangay, City"
                                android:textColor="#FF000000"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <!-- Birth Date -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Birth Date:"
                                android:textColor="@color/gray_600"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/studentBirthDate"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="January 1, 2005"
                                android:textColor="#FF000000"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <!-- Gender -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Gender:"
                                android:textColor="@color/gray_600"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/studentGender"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="Male"
                                android:textColor="#FF000000"
                                android:textSize="14sp" />
                        </LinearLayout>


                        <!-- Status -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Status:"
                                android:textColor="@color/gray_600"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/studentStatusText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="Active"
                                android:textColor="#FF000000"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <!-- Created Date -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Enrolled:"
                                android:textColor="@color/gray_600"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/studentCreatedDate"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="Jan 1, 2024"
                                android:textColor="#FF000000"
                                android:textSize="14sp" />
                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- PDF Download Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDownloadPdf"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="24dp"
                    android:backgroundTint="@color/dark_green"
                    android:text="Download Student Registration (PDF)"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:minHeight="48dp"
                    app:icon="@drawable/ic_file_download"
                    app:iconTint="@color/white"
                    app:iconGravity="textStart" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>